<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ZakatVault.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ZakatVault.Pages"
    Title="ZakatVault">

    <!-- Login Page -->
    <ShellItem Route="Login">
        <ShellContent ContentTemplate="{DataTemplate local:LoginPage}" Route="LoginPage" />
    </ShellItem>

    <!-- Secure Area -->
    <TabBar Route="Secure">
        <Tab Title="Dashboard" Icon="{x:Null}">
            <ShellContent ContentTemplate="{DataTemplate local:DashboardPage}" Route="DashboardPage" />
        </Tab>
        <Tab Title="Assets" Icon="{x:Null}">
            <ShellContent ContentTemplate="{DataTemplate local:AssetsPage}" Route="AssetsPage" />
        </Tab>
        <Tab Title="Liabilities" Icon="{x:Null}">
            <ShellContent ContentTemplate="{DataTemplate local:LiabilitiesPage}" Route="LiabilitiesPage" />
        </Tab>
        <Tab Title="Calculator" Icon="{x:Null}">
            <ShellContent ContentTemplate="{DataTemplate local:ZakatCalcPage}" Route="ZakatCalcPage" />
        </Tab>
    </TabBar>

</Shell>
