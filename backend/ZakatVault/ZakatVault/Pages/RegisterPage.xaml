<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZakatVault.Pages.RegisterPage"
             Title="Register"
             BackgroundColor="#F5F7FA">

    <ScrollView>
        <Grid RowDefinitions="*">
            
            <VerticalStackLayout Spacing="0" VerticalOptions="Center" HorizontalOptions="Center" Padding="20">
                
                <Border BackgroundColor="White" 
                       Padding="40"
                       WidthRequest="450"
                      StrokeShape="RoundRectangle 30">
                    <VerticalStackLayout Spacing="25">
                        
                        <!-- Icon -->
                        <Border StrokeThickness="0" 
                                BackgroundColor="{DynamicResource BrandGreenLight}"
                                HeightRequest="60"
                                WidthRequest="60"
                                StrokeShape="RoundRectangle 30"
                                HorizontalOptions="Center">
                            <Label Text="👤" 
                                   TextColor="{DynamicResource BrandGreen}"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <!-- Title & Subtitle -->
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Create Account"
                                   FontSize="28"
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource MidnightBlue}"
                                   HorizontalOptions="Center" />
                            
                            <Label Text="Start tracking your assets and Zakat today"
                                   FontSize="16"
                                   TextColor="#6B7280"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>

                        <!-- Form -->
                        <VerticalStackLayout Spacing="20">
                            
                            <!-- Full Name -->
                            <VerticalStackLayout Spacing="8">
                                <Label Text="Full Name" TextColor="{DynamicResource MidnightBlue}" FontAttributes="Bold" FontSize="14" />
                               
                                    <Entry Placeholder="" TextColor="{DynamicResource Black}" VerticalOptions="Center" Text="{Binding Name}"/>
                                
                            </VerticalStackLayout>

                            <!-- Email -->
                            <VerticalStackLayout Spacing="8">
                                <Label Text="Email Address" TextColor="{DynamicResource MidnightBlue}" FontAttributes="Bold" FontSize="14" />
                              
                                    <Entry Placeholder="" Keyboard="Email" TextColor="{DynamicResource Black}" VerticalOptions="Center" Text="{Binding Email}" />
                                
                            </VerticalStackLayout>

                            <!-- Password -->
                            <VerticalStackLayout Spacing="8">
                                <Label Text="Password" TextColor="{DynamicResource MidnightBlue}" FontAttributes="Bold" FontSize="14" />
                               
                                    <Entry IsPassword="True" TextColor="{DynamicResource Black}" VerticalOptions="Center" Text="{Binding Password}" />
                             
                            </VerticalStackLayout>

                            <Label Text="{Binding Message}" TextColor="Red" />

                            <!-- Create Account Button -->
                            <Button Text="Create Account"
                                    BackgroundColor="{DynamicResource BrandGreen}"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    CornerRadius="8"
                                    HeightRequest="50"
                                    Command="{Binding RegisterCommand}"
                                    Margin="0,10,0,0"/>

                            <!-- Footer -->
                            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0,10,0,0">
                                <Label Text="Already have an account?" TextColor="#6B7280" FontSize="14" />
                                <Label Text="Sign In" 
                                       TextColor="{DynamicResource BrandGreen}" 
                                       FontAttributes="Bold"
                                       FontSize="14">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding LoginCommand}" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </HorizontalStackLayout>

                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>
                
            </VerticalStackLayout>
            
        </Grid>
    </ScrollView>

</ContentPage>