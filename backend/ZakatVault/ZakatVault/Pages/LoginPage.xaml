<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZakatVault.Pages.LoginPage"
             Title=""
             Shell.FlyoutBehavior="Disabled"
             BackgroundColor="#F5F7FA">

    <ScrollView>
        <Grid RowDefinitions="*">
            
            <VerticalStackLayout Spacing="0" VerticalOptions="Center" HorizontalOptions="Center" Padding="20">
                
                <Border BackgroundColor="White" 
                       Padding="40"
                       WidthRequest="450"
                        StrokeShape="RoundRectangle 30">
                    <VerticalStackLayout Spacing="25">
                        
                        <!-- Icon -->
                        <Border StrokeThickness="0" 
                                BackgroundColor="{DynamicResource BrandGreenLight}"
                                HeightRequest="60"
                                WidthRequest="60"
                                StrokeShape="RoundRectangle 30"
                                HorizontalOptions="Center" 
                                Shadow="#000000 4 4">
                            <Label Text="➔" 
                                   TextColor="{DynamicResource BrandGreen}"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <!-- Title & Subtitle -->
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Welcome Back"
                                   FontSize="28"
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource MidnightBlue}"
                                   HorizontalOptions="Center" />
                            
                            <Label Text="Sign in to access your savings portfolio"
                                   FontSize="16"
                                   TextColor="#6B7280"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>

                        <!-- Form -->
                        <VerticalStackLayout Spacing="20">
                            
                            <!-- Email -->
                            <VerticalStackLayout Spacing="8">
                                <Label Text="Email Address" TextColor="{DynamicResource MidnightBlue}" FontAttributes="Bold" FontSize="14" />
                               
                                    <Entry Placeholder="" TextColor="{DynamicResource Black}" VerticalOptions="Center"  />
                               
                            </VerticalStackLayout>

                            <!-- Password -->
                            <VerticalStackLayout Spacing="8">
                                <Label Text="Password" TextColor="{DynamicResource MidnightBlue}" FontAttributes="Bold" FontSize="14" />
                               
                                    <Entry IsPassword="True" TextColor="{DynamicResource Black}" VerticalOptions="Center" />
                              
                            </VerticalStackLayout>

                            <!-- Sign In Button -->
                            <Button Text="Sign In"
                                    BackgroundColor="{DynamicResource BrandGreen}"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    CornerRadius="8"
                                    HeightRequest="50"
                                    Clicked="OnLoginClicked"
                                    Margin="0,10,0,0"/>

                            <!-- Footer -->
                            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0,10,0,0">
                                <Label Text="Don't have an account?" TextColor="#6B7280" FontSize="14" />
                                <Label Text="Create Account" 
                                       TextColor="{DynamicResource BrandGreen}" 
                                       FontAttributes="Bold"
                                       FontSize="14">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnSignUpClicked" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </HorizontalStackLayout>

                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>
                
            </VerticalStackLayout>
            
        </Grid>
    </ScrollView>

</ContentPage>